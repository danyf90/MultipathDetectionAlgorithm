<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <PreferenceCategory android:title="@string/preference_general">
        <EditTextPreference
            android:key="@string/prefs_request_timeout"
            android:title="@string/request_timeout"
            android:defaultValue="@string/request_timeout_default"
            android:inputType="phone"
            android:digits="0123456789" />

    </PreferenceCategory>
    
    <PreferenceCategory android:title="@string/preference_notifications">
        <CheckBoxPreference
            android:key="@string/prefs_issues_notifications"
            android:title="@string/issues_notifications"
            android:defaultValue="@string/issues_notifications_default" 
            />
        
        <CheckBoxPreference
            android:key="@string/prefs_tasks_notifications"
            android:title="@string/tasks_notifications"
            android:defaultValue="@string/tasks_notifications_default" 
            />
    </PreferenceCategory>
</PreferenceScreen>
<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="@string/preference_general_settings" >
        <CheckBoxPreference
            android:defaultValue="@string/preference_preload_all_default"
            android:key="@string/preference_preload_all"
            android:title="@string/preference_preload_all_label" />
        <CheckBoxPreference
            android:defaultValue="@string/preference_immersive_mode_default"
            android:key="@string/preference_immersive_mode"
            android:title="@string/preference_immersive_mode_label" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/preference_server_settings" >
        <EditTextPreference
            android:defaultValue="@string/preference_server_url_default"
            android:key="@string/preference_server_url"
            android:title="@string/preference_server_url_label" />
        <EditTextPreference
            android:defaultValue="@string/preference_server_port_default"
            android:key="@string/preference_server_port"
            android:title="@string/preference_server_port_label"/>
    </PreferenceCategory>
    
</PreferenceScreen>